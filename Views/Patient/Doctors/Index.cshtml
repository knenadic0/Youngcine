@model List<Mladacina.Models.PatientDoctor>
@{
    ViewData["Title"] = "Doctors";
    ViewData["Role"] = "Patient";
}

<div>
    <div class="w-100 mt-lg-5 container-fluid">
        <div class="row">
            <div class="col-lg-10">
                <h3 class="role">My doctors</h3>
            </div>
            <div class="col-lg-2 text-right">
                @if (Model.Count > 0)
                {
                    <a class="btn btn-info" asp-action="DoctorChange">
                        <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;&nbsp;Change
                    </a>
                }
                else
                {
                    <a class="btn btn-info" asp-action="DoctorAdd">
                        <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp;Add
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="container-fluid mt-lg-5">
        @if (Model.Count > 0)
        {
            <table class="table table-hover mt-4" id="doctorsTable">
                <thead>
                    <tr>
                        <th>Doctor</th>
                        <th class="text-center">Since</th>
                        <th class="text-center">Until</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PatientDoctor item in Model)
                    {
                        <tr>
                            <td>@item.Doctor.User.FirstName @item.Doctor.User.LastName</td>
                            <td class="text-center">@item.DateFrom.ToNormalDate()</td>
                            <td class="text-center">
                                @if (item.DateTo == null)
                                {
                                    <span>&infin;</span>
                                }
                                else
                                {
                                    <span>@item.DateTo.Value.ToNormalDate()</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="card-body m-5">
                <h5 class="text-center m-5">No doctors yet.</h5>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#doctorsTable').DataTable({
                "order": []
            });
        });
    </script>
}
