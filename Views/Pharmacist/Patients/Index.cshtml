@model List<Mladacina.Models.Patient>
@{
    ViewData["Title"] = "Patients";
    ViewData["Role"] = "Pharmacist";
}

<div>
    <div class="w-100 mt-lg-5 container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="role">Patients</h3>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-lg-5">
        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-hover mt-4" id="patientsTable">
                <thead>
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Date of birth</th>
                        <th class="text-center">Sex</th>
                        <th class="text-center">Social Number</th>
                        <th class="text-center">View</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Patient item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.User.FirstName @item.User.LastName</td>
                            <td class="text-center">@item.User.DOB.ToNormalDate()</td>
                            <td class="text-center">@item.User.Sex.ToString()</td>
                            <td class="text-center">@item.SN</td>
                            <td class="text-center">
                                <a asp-action="PatientView" asp-route-id="@item.Id">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="card-body m-5">
                <h5 class="text-center m-5">No registered patients yet.</h5>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#patientsTable').DataTable();
        });
    </script>
}
