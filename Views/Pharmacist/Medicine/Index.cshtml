@model List<Mladacina.Models.Medicine>
@{
    ViewData["Title"] = "Medicine";
    ViewData["Role"] = "Pharmacist";
}

<div>
    <div class="w-100 mt-lg-5 container-fluid">
        <div class="row">
            <div class="col-lg-10">
                <h3 class="role">Medicine</h3>
            </div>
            <div class="col-lg-2 text-right">
                <a class="btn btn-info" asp-action="MedicineCreate">
                    <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp;New
                </a>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-lg-5">
        <table class="table table-hover mt-4" id="medicineTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th class="text-center">Without Prescription</th>
                    <th>Description</th>
                    <th class="text-center">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Medicine item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Type.ToString()</td>
                        <td>@item.Price HRK</td>
                        <td>
                            @if (item.Type == MedicineType.Syrup)
                            {
                                <span>@item.Quantity ml</span>
                            }
                            else
                            {
                                <span>@item.Quantity pcs</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.WithoutPrescription)
                            {
                                <i class="fa fa-check" aria-hidden="true"></i>
                            }
                            else
                            {
                                <i class="fa fa-times" aria-hidden="true"></i>
                            }
                        </td>
                        <td>@item.Description</td>
                        <td class="text-center">
                            <a asp-action="MedicineEdit" asp-route-id="@item.Id">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#medicineTable').DataTable();
        });
    </script>
}

